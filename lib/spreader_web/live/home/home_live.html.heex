  <!-- Dashboard Section -->
  <section class="dashboard-section">
    <div class="dashboard-info">
      <h2 class="section-title">Simple 3-Step Upload Process</h2>
      <div class="workflow-steps">
        <div class="workflow-step">
          <div class="step-number">1</div>
